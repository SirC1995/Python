def frame(text, char):
    words = []

    for word in text:
        words.append(len(word))
    
    print(char * (max(words) + 4))

    for word in text:
        if len(word) <= max(words):
            number = max(words) - len(word)
            space = number * " "
            print(char, word, space + char)
        else:
            print(char, word, char)

    print(char * (max(words) + 4))

    return
